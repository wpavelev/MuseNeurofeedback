<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wpavelev.museneurofeedback.SoundCheck">

    <Button
        android:id="@+id/testsound1"
        android:layout_width="135dp"
        android:layout_height="75dp"
        android:text="Finish Sound"
        app:layout_constraintBottom_toTopOf="@+id/testsound2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/testsound2"
        android:layout_width="135dp"
        android:layout_height="75dp"
        android:text="Obere Grenze"
        app:layout_constraintBottom_toTopOf="@+id/testsound3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testsound1" />

    <Button
        android:id="@+id/testsound3"
        android:layout_width="135dp"
        android:layout_height="75dp"
        android:text="Untere Grenze"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testsound2" />
</android.support.constraint.ConstraintLayout>
